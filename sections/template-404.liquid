<div class="max-w-md">
    <div class="text-5xl font-bold my-4">
        <h1>{{ section.settings.title}}</h1>
    </div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">
            {{ section.settings.subtex}}
        </p>
    </div>
    <div class="my-4">
        
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
            {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a class="px-4 inline py-2 text-base font-medium shadow bg-green-600
         hover:bg-green-800 text-white" 
         href="{{ shop_url }}" >
            {{ section.settings.button_label }}
        </a>
    </div>
</div>


{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex justify-center text-center items-center py-7 h-screen",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "404",
            "label": "404 title"
        },
        {
            "type": "textarea",
            "id": "subtex",
            "default": "This page dont exist",
            "label": "404 subtext"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "URL subtext"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "button label",
            "label": "label subtext"
        }
        ]
}
{% endschema %}